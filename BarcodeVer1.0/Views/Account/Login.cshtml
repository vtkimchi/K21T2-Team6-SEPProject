
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="">
    <title>Login</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap1.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- You can change the theme colors from here -->
    <link href="~/Content/blue.css" id="theme" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    @*<div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>*@



    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper" class="login-register login-sidebar" >
        <div class="login-box card">
            <div class="card-block">
                <form class="form-horizontal form-material" id="loginform" action="~/Account/Login" method="post">
                    <a href="javascript:void(0)" class="text-center db"><img src="~/Images/Logo_VL.png" alt="Home" /></a>
                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required name="username" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" required name="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group" id="div_API" >
                        <div class="col-xs-12">
                            <input class="form-control" type="url" name="Link_connect" value="https://entool.azurewebsites.net/SEP21" id="Link_API" readonly required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup" type="checkbox" name="check" onclick="on_off()">
                                <label for="checkbox-signup"> Custom Link API </label>                                
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @ViewBag.error
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script>
        function on_off()
        {
            var searchIDs = $("input:checkbox:checked").map(function () {
                return $(this).val();
            }).get();
            //var cBoxVal = $("checkbox-signup").val();
            if (searchIDs!="")
            {
                //$("#div_API").attr("hidden", false);
                $("#Link_API").attr("value", "");
                $("#Link_API").attr("placeholder", "Your Link API");
                $("#Link_API").attr("readonly", false);

            } else
            {
                //$("#div_API").attr("hidden", true);
                $("#Link_API").attr("value", "https://entool.azurewebsites.net/SEP21");
                $("#Link_API").attr("readonly", true);

            }
        }
    </script>

    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Scripts/tether.min.js"></script>
    <script src="~/Scripts/bootstrap1.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Scripts/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Scripts/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Scripts/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/Scripts/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Scripts/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="~/Scripts/jQuery.style.switcher.js"></script>
</body>

</html>
